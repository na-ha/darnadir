---
import { getHomePermalink } from '~/utils/permalinks';
---

<section class="flex items-center h-full p-16">
	<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
		<div class="max-w-md text-center">
			<h2 class="mb-8 text-9xl">
				<span class="sr-only">Error</span>
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-red-900">404</span>
			</h2>
			<p class="text-3xl md:text-3xl">Sorry, we couldn't find this page.</p>
			<p class="mt-4 mb-8 text-lg text-stone-600">
				But dont worry, you can find plenty of other things on our homepage.
			</p>
			<a
				rel="noopener noreferrer"
				href={getHomePermalink()}
				class="btn text-stone-50 bg-stone-900 hover:bg-stone-800 ml-4"
				>Back to homepage</a
			>
		</div>
	</div>
</section>
