---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
---

<section class="relative">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="max-w-3xl mx-auto text-center py-6  shadow-xl" id="shop">
				<Picture
						src={import('~/assets/images/hero.jpg')}
						class="mx-auto shadow-lg bg-gray-400 dark:bg-slate-700 max-w-sm"
						widths={[400, 768]}
						sizes=" (max-width: 767px) 400px, 768px"
						alt="Hero Image"
						aspectRatio="3:4"
					/>
				<br><br>	
				<h2 class="text-6xl md:text-6xl mb-4 font-heading text-stone-900">
					<span>Base T-Shirt</span> <br class="block sm:hidden" />
				</h2>
				<p class="text-xl text-stone-800">
					White on white embroidered T-Shirt<br>Made in Paris intra muros<br>100% organic cotton<br>Gender neutral<br>Free shipping<br>No returns<br>
				</p>
				<div class="mt-6">
					<button id="buy" class="btn text-stone-100 bg-emerald-800 hover:bg-emerald-900 mb-4 sm:mb-0 text-3xl">Order</button>
				</div>
				<script>
					function toggleSizer(){
						const sizer = document.getElementById('sizer');
						const sizerLabel = document.getElementById('sizerLabel');
						const button = document.getElementById('buy');
						button.classList.toggle('hidden');
						sizer.classList.toggle('hidden');
						sizerLabel.classList.toggle('hidden');
					}

					window.addEventListener('load', function() {
						document.getElementById('buy').addEventListener('click',() => {
							toggleSizer();
						}) 
					})
					
					
				</script>
				<div id="sizerLabel" class="mt-6 hidden sizer text-3xl">Choose your size</div>
				<div id="sizer" class="mt-6 hidden sizer">
					
					<a
						class="btn text-stone-100 bg-emerald-800 hover:bg-emerald-900 mb-4 sm:mb-0 text-3xl"
						href="https://buy.stripe.com/cN2dUS1pS3iA6FabIS"
						target="_blank"
						rel="noopener"
					>
					Petit
					</a>
					<a
						class="btn text-stone-100 bg-emerald-800 hover:bg-emerald-900 mb-4 sm:mb-0 text-3xl"
						href="https://buy.stripe.com/cN23ge0lO5qIaVq009"
						target="_blank"
						rel="noopener"
					>
					Moyen
					</a>
					<a
						class="btn text-stone-100 bg-emerald-800 hover:bg-emerald-900 mb-4 sm:mb-0 text-3xl"
						href="https://buy.stripe.com/bIYcQO4C44mE6Fa3ck"
						target="_blank"
						rel="noopener"
					>
					Grand
					</a>
				</div>
				<br>
					<a
						class="text-stone-500 hover:text-stone-400 transition duration-150 ease-in-out text-xl"
						href="#size">Size Guide</a>
			</div>
		</div>
	</div>
</section>
